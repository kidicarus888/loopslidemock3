// --- Shared Components ---

const Card = ({ title, children, className = "", onClick, active }) => (
  <div 
    onClick={onClick}
    className={`
      relative overflow-hidden rounded-3xl p-6 transition-all duration-300 cursor-pointer border flex flex-col
      ${active 
        ? 'bg-white shadow-xl scale-[1.02] border-blue-200 ring-2 ring-blue-100 z-10' 
        : 'bg-white/80 hover:bg-white hover:shadow-lg border-slate-100 hover:border-blue-100'
      }
      ${className}
    `}
  >
    {children}
  </div>
);

const Badge = ({ children, color = "blue" }) => {
  const colors = {
    blue: "bg-blue-100 text-blue-700",
    emerald: "bg-emerald-100 text-emerald-700",
    violet: "bg-violet-100 text-violet-700",
    slate: "bg-slate-100 text-slate-700",
    orange: "bg-orange-100 text-orange-700"
  };
  return (
    <span className={`px-2.5 py-0.5 rounded-full text-[10px] uppercase tracking-wide font-bold ${colors[color]}`}>
      {children}
    </span>
  );
};

